@{
  Layout = "_Layout";
}
@using VendorTracker.Models;

<h1>Vendors</h1>

@if (Model.Count == 0)
{
  <h3>There are no vendors added yet!</h3>
}
@foreach (Vendor vendor in Model)
{
  <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
}
<h6><a href="/vendors/new">Add a new vendor</a></h6>
<p><a href="/">Home</a></p>